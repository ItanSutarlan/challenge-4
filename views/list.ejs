    <%- include('./partials/header.ejs') %> 
    <title>Dashboard</title>
</head>
<body style="background-color: #080a0b;">
    <div class="container">
        <a class="btn btn-primary mt-3" href='/users/add'>Create</a>
        <table class="table table-dark table-striped mt-3 text-center">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Score</th>
                    <th>Action</th>
                </tr>    
            </thead>
            <tbody>
                <% users.forEach(function(user){ %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.user_biodata.firstName %></td>
                        <td><%= user.user_biodata.lastName %></td>
                        <td><%= user.user_history.score %></td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a class="btn btn-primary" href='/users/edit/<%= user.uuid %>'>Edit</a> &nbsp;							
                                <form method="post" action="/users/<%= user.uuid %>">
                                    <input class="btn btn-danger" type="submit" name="delete" value='Delete' onClick="confirm('Are you sure you want to delete?')" />
                                    <input type="hidden" name="_method" value="DELETE" />
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>        
            </tbody>
        </table>    
    </div>
    <%- include('./partials/footer.ejs') %> 